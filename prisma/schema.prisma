generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String    @id @default(cuid())
  username              String    @unique
  usernameSetupComplete Boolean   @default(true)
  firstName             String    @default("")
  lastName              String    @default("")
  location              String?
  timezone              String?
  passwordHash          String?
  email                 String?   @unique
  name                  String?
  image                 String?
  emailVerified         DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  accounts   Account[]
  sessions   Session[]
  calendars  Calendar[]
  events     Event[]
  eventReminders EventReminder[]
  tasks      Task[]
  inboxItems InboxItem[]
  llmSettings UserLlmSettings?
  agentPrompts AgentPrompt[]
  agentConversations AgentConversation[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Calendar {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String   @default("#3b82f6")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  events Event[]

  @@index([userId, createdAt])
}

model Event {
  id                      String   @id @default(cuid())
  userId                  String
  calendarId              String
  parentEventId           String?
  originalOccurrenceStart DateTime?
  title                   String
  startAt                 DateTime
  endAt                   DateTime
  allDay                  Boolean  @default(false)
  location                String?
  description             String?
  notes                   String?
  color                   String?
  eventType               String   @default("default")
  workingLocationLabel    String?
  timezone                String?
  recurrenceRule          String?
  recurrenceUntil         DateTime?
  recurrenceCount         Int?
  exdates                 DateTime[] @default([])
  tags                    String[] @default([])
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  calendar        Calendar       @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  parentEvent     Event?         @relation("EventRecurrenceExceptions", fields: [parentEventId], references: [id], onDelete: SetNull)
  exceptionEvents Event[]        @relation("EventRecurrenceExceptions")
  reminders       EventReminder[]

  @@index([userId, startAt])
  @@index([calendarId, startAt])
  @@index([parentEventId])
}

model EventReminder {
  id            String   @id @default(cuid())
  userId        String
  eventId       String
  minutesBefore Int
  method        String
  firedAt       DateTime?
  createdAt     DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([userId, firedAt, method])
  @@index([eventId, minutesBefore])
}

model Task {
  id        String       @id @default(cuid())
  userId    String
  title     String
  dueAt     DateTime?
  priority  String?
  status    String       @default("todo")
  notes     String?
  tags      String[]     @default([])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model InboxItem {
  id        String   @id @default(cuid())
  userId    String
  content   String
  type      String   @default("note")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model UserLlmSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  provider          String   @default("openai")
  model             String   @default("gpt-4o-mini")
  openaiApiKeyEnc   String?
  anthropicApiKeyEnc String?
  googleApiKeyEnc   String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AgentPrompt {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  prompt      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, updatedAt])
}

model AgentConversation {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages AgentMessage[]

  @@index([userId, updatedAt])
}

model AgentMessage {
  id             String   @id @default(cuid())
  conversationId String
  role           String
  content        String
  action         String?
  meta           String?
  createdAt      DateTime @default(now())

  conversation AgentConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

